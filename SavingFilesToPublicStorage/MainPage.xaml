<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SavingFilesToPublicStorage.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#65AD19" Padding="24" CornerRadius="0">
            <Label Text="Save Files Bluetooth App" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Please turn on Bluetooth and Location" FontSize="Title" Padding="30,10,30,10"/>
        <Button x:Name="SaveFile"
                Text="Save File"
                Clicked="SaveFile_Clicked"/>
        <Button x:Name="Navigate"
                Text="Navigate to Bluetooth data Page"
                Clicked="Navigate_Clicked"/>
    </StackLayout>

</ContentPage>
